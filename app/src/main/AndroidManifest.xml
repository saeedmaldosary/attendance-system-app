            android:name="com.example.StudentsAttendanceSystemFacialRecognition.MainActivity"
            android:label="@string/space" />
        <activity
            android:name="com.example.StudentsAttendanceSystemFacialRecognition.DetectedNames"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.StudentsAttendanceSystemFacialRecognition.Training"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.StudentsAttendanceSystemFacialRecognition.NameActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.StudentsAttendanceSystemFacialRecognition.Splash_Screen"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.firebase.ml.vision.DEPENDENCIES"
            android:value="face" />
    </application>

</manifest>