    <uses-feature
        android:name="android.hardware.camera.front"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.front.autofocus"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.StudentsAttendanceSystemFacialRecognition.editAttendanceSheet"
            android:label=""></activity>
        <activity
            android:name="com.example.StudentsAttendanceSystemFacialRecognition.ShowAttendanceSheet"
            android:label="" />
        <activity
            android:name="com.example.StudentsAttendanceSystemFacialRecognition.AttendanceSheetSelect"
            android:label="" />
        <activity
            android:name="com.example.StudentsAttendanceSystemFacialRecognition.ConfirmAttendeeStudentList"
            android:label="" />
        <activity
            android:name="com.example.StudentsAttendanceSystemFacialRecognition.attendeeStudentsList"
            android:label="" />
        <activity android:name="com.example.StudentsAttendanceSystemFacialRecognition.confirmAttendee" />
        <activity
            android:name="com.example.StudentsAttendanceSystemFacialRecognition.ChooseCourseDetectdNames"
            android:label="" />
        <activity
            android:name="com.example.StudentsAttendanceSystemFacialRecognition.SelectCourseTrain"
            android:label="" />
        <activity android:name="com.example.StudentsAttendanceSystemFacialRecognition.MainActivityStudents"
            android:label=""/>
        <activity
            android:name="com.example.StudentsAttendanceSystemFacialRecognition.LoginActivity"
            android:label="@string/space" />
        <activity
            android:name="com.example.StudentsAttendanceSystemFacialRecognition.Recognise"
            android:theme="@style/AppTheme.NoActionBar" />
